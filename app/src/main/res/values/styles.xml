<resources>

    <!-- Base mddn.swen.headbanger.application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/myActionBar</item>
        <item name="android:listViewStyle">@style/myListStyle</item>
        <item name="android:preferenceCategoryStyle">@style/myPreferencesStyle</item>
        <item name="android:preferenceInformationStyle">@style/myInfoPreferencesStyle</item>
        <item name="android:dialogPreferenceStyle">@style/myDialogPreferenceStyle</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:checkboxStyle">@style/myCheckableStyle</item>
    </style>

    <style name="myActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#00ffff</item>
    </style>

    <style name="myListStyle" parent="android:Widget.ListView">
        <item name="android:background">#00b2b2</item>
    </style>

    <style name="myPreferencesStyle" parent="android:Widget">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="android:textColorTertiary">#000000</item>
    </style>

    <style name="myInfoPreferencesStyle" parent="android:Widget">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="android:textColorTertiary">#000000</item>
    </style>

    <style name="myDialogPreferenceStyle" parent="android:Widget">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="android:textColorTertiary">#000000</item>
    </style>

    <style name="myCheckableStyle" parent="android:Widget.Holo.Light.CompoundButton.CheckBox">
        <item name="android:drawable">@drawable/btn_check_on_disable_focused</item>

    </style>

</resources>
