<?xml version="1.0" encoding="utf-8"?>

<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:shareInterpolator="false">

    <rotate
        android:fromDegrees="0"
        android:toDegrees="-5"
        android:duration="50"
        android:pivotX="50%"
        android:pivotY="50%"
        >
    </rotate>

    <rotate
        android:fromDegrees="-5"
        android:toDegrees="5"
        android:duration="100"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="50"
        >
    </rotate>

    <rotate
        android:fromDegrees="5"
        android:toDegrees="0"
        android:duration="50"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="150"
        >
    </rotate>
</set>