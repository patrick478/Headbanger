<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/headbanger_connected_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/connected_generic_text"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/headphone" />

    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/small31"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="@dimen/activity_vertical_margin"-->
        <!--android:alpha="0"/>-->

    <TextView
        android:id="@+id/connected_generic_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@+string/connected_successful_string" />

    <TextView
        android:id="@+id/song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/connected_generic_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Title"/>

    <TextView
        android:id="@+id/song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_title"
        android:layout_centerHorizontal="true"
        android:text="Artist"/>


    <TextView
        android:id="@+id/song_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_artist"
        android:layout_centerHorizontal="true"
        android:text="Album"/>

    <ImageView
        android:id="@+id/play_status_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@id/song_album"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:alpha="1"
        android:background="@drawable/pause"
        />

    <ImageView
        android:id="@+id/previous_status_image"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_below="@id/song_album"
        android:layout_toStartOf="@+id/play_status_image"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:alpha="1"
        android:background="@drawable/previous"
        />

    <ImageView
        android:id="@+id/next_status_image"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_below="@id/song_album"
        android:layout_toEndOf="@+id/play_status_image"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:alpha="1"
        android:background="@drawable/next"
        />

    <TextView
        android:id="@+id/nod_count_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/play_status_image"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:visibility="invisible"/>


</RelativeLayout>